{
  "AWSEBDockerrunVersion": 2,
  "volumes": [{
    "name": "bot",
    "host": {
      "sourcePath": "/var/app/current/bot"
    }
  }, {
    "name": "nginx-proxy-conf",
    "host": {
      "sourcePath": "/var/app/current/proxy"
    }
  }, {
    "name": "mongo",
    "host": {
      "sourcePath": "/mongo_db"
    }
  }],
  "containerDefinitions": [{
      "name": "bot",
      "image": "node:slim",
      "essential": true,
      "memory": 512,
      "command": [
        "/bin/bash",
        "/usr/src/app/run-ui.sh"
      ],
      "links": [
        "mongo"
      ],
      "mountPoints": [{
        "sourceVolume": "bot",
        "containerPath": "/usr/src/app"
      }]
    },
    {
      "name": "mongo",
      "image": "mongo",
      "essential": true,
      "memory": 512,
      "mountPoints": [{
        "sourceVolume": "mongo",
        "containerPath": "/data/db"
      }]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 256,
      "portMappings": [{
        "hostPort": 80,
        "containerPort": 80
      }],
      "links": [
        "mongo",
        "bot"
      ],
      "mountPoints": [{
        "sourceVolume": "awseb-logs-nginx-proxy",
        "containerPath": "/var/log/nginx"
      }, {
        "sourceVolume": "nginx-proxy-conf",
        "containerPath": "/etc/nginx",
        "readOnly": true
      }]
    }
  ]
}